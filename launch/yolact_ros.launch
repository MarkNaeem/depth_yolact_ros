<?xml version="1.0"?>
<launch>

  <arg name="yolact_weights" default="/home/mark/Downloads/yolact_plus_resnet50_54_800000.pth" />
  <arg name="image_topic" default="/camera/color/image_raw" />
  <arg name="depth_topic" default="/camera/depth_aligned/image_rect" />
  <arg name="camera_info_topic" default="/camera/depth_aligned/camera_info" />

  <node pkg="yolact_ros" type="yolact_ros.py" name="yolact_ros" output="screen">
    <param name="model_path" value="$(arg yolact_weights)" />
    <param name="image_topic" value="$(arg image_topic)" />
    <param name="depth_topic" value="$(arg depth_topic)" />
    <param name="camera_info_topic" value="$(arg camera_info_topic)" />
    <param name="use_compressed_image" value="False" />
    <param name="use_compressed_depth" value="False" />
    <param name="publish_visualization" value="True" />
    <param name="publish_detections" value="False" />
    <param name="score_threshold" value="0.25" />		
  </node>

</launch>
